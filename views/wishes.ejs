     <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">
     <link href="https://fonts.googleapis.com/css?family=Bitter" rel="stylesheet">
     <link href="https://fonts.googleapis.com/css?family=Ubuntu+Condensed" rel="stylesheet">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
     <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
     <script src="http://code.jquery.com/jquery-latest.js"></script>
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #232323;
             color: white;
    text-align:center;
    margin-top: 5%;
}
table {
    background-color: #1e1833;
    border-collapse: separate;
    width: 90%;
   margin-left:5%;
     margin-right:5%;
}
         a { 
             color: white;
    text-decoration: none; /* Отменяем подчеркивание у ссылки */
   }

th, td {
    padding-right: 0px;
    padding-left: 0px;
    text-align: center;
    padding-top: 1%;
    padding-bottom: 1%;
}

tr:nth-child(even){background-color: #162930}

th {
    font-size: 1.2em;
    background-color: #1e1833;
    color: white;
}
textarea {
    width: 70%;
    padding: 1%;
    text-align: center;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    font-size: 1.1em;
    outline: none;
	-moz-appearance: none;
	border: 1px solid #110051;
    resize: none;
	overflow: auto;
}
        
button {
    background-color: #1e1833;
    border: none;
    color: white;
    width: 100%;
    padding: 10% 10%;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 100%;
}        
     </style>
 </head>
 <body> 
     
   <header>
    <h1 font-size="20px" align="center">WantIT</h1>
           </header>
     
<style>
.top-fixed_ul {
    z-index: 100;
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #333;
    position: fixed;
    top: 0;
    width: 100%;
}

.top-fixed_li {
    float: left;
}

.top-fixed_li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
}

.top-fixed_li a:hover:not(.active) {
    background-color: #111;
}

.active {
    background-color: #4CAF50;
}
    .wishesAuthor:hover{
    text-decoration: line-through;
   
        color: red;
} 
    
    .wishesSelected{
    text-decoration: line-through;
        color: gray;
} 
    
    .postScriptm{
    text-decoration: none;
        color: gray;
}     
    .wishes:hover{
           text-decoration: underline;
   
        color: green;
    }    
    </style>
<nav>
    <ul class="top-fixed_ul">
        <li class="top-fixed_li"><a href="#">Wishes</a></li>
        <li class="top-fixed_li"><a href="/groups">Groups</a></li>
        <li class="top-fixed_li"><a href="/user/<%= user %>/">Account </a></li>
    </ul>
</nav>
      <h4>Your Group name is - <%= group %> </h4>  
         <div style="text-align:center;">
           <table>
                <form method="POST"  text-align="center">
               <tr>
            <th><textarea rows="1" cols=100 id = "input" name="AddWish" placeholder="Add new wish" style="width: 90%;"></textarea></th>
                   <th><button id = "1" type="submit">Add</button></th>
               </tr>
               </form>
                <tr>
                    <th>Wish</th>
                    <th>User name</th>
                    
                </tr> 
                  <form method="DELETE"  text-align="center">
               <% for (var i = (data.length - 1); i >= 0; i--){ %>
                <tr>
                <td onclick='Deltest'>
                    
                    <% if (user == data[i].User){  %>
                     <a class="wishesAuthor" href = "delete/<%= data[i].Wish %>"><%= data[i].Wish %></a>
                    
                        <% } else{ %>
                    <% if (data[i].Wid != 0){ %>
                     <% if (data[i].Wid == user){ %>
                    <a class="wishesAuthor" href = "unselect/<%= data[i].Wish %>"><%= data[i].Wish %><A class="postScriptm" > (click to unselect)</A></a>
                     <% } else{%>
                    <a class="wishesSelected"><%= data[i].Wish %><A class="postScriptm" > (already selected)</A></a>
                    <% } %>
                        <% }
                    
                        else{%>
                    <a class="wishes" href = "select/<%= data[i].Wish %>"><%= data[i].Wish %></a>
                    <% } %>
                    
                    <% } %>
                       </td>
                    
               <td><%= data[i].User %></td>

               </tr>
               <% }  %>
                      
                      <script>
                          $("#input").keyup(function(event){
                          if(event.keyCode == 13){
                          $("#1").click();
                          $(this).val('');
                                                 }
                                                                   });
                      </script>
               </form>
         </table>

             </div>
     
      </body>
</html>